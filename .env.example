# Environment Variables Template
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=3000

# AWS Configuration
AWS_REGION=us-east-1
USE_SECRETS_MANAGER=false
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# AWS Secrets Manager Secret Names (used when USE_SECRETS_MANAGER=true)
DB_SECRET_NAME=ecommerce-v3/prod/database
REDIS_SECRET_NAME=ecommerce-v3/prod/redis
APP_SECRET_NAME=ecommerce-v3/prod/app-config

# Database Configuration (used when USE_SECRETS_MANAGER=false)
DB_HOST=localhost
DB_USER=ecommerce_admin
DB_PASSWORD=your_db_password_here
DB_NAME=ecommerce_db
DB_PORT=5432

# Redis Configuration (used when USE_SECRETS_MANAGER=false)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_TLS=false

# JWT Configuration (used when USE_SECRETS_MANAGER=false)
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# Session Configuration (used when USE_SECRETS_MANAGER=false)
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_MAX_AGE=86400000

# Application Keys
API_KEY=your_api_key_here
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
